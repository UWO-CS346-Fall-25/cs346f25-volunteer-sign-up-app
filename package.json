{
  "name": "cs346-semester-project-template",
  "version": "1.0.0",
  "description": "CS346 Semester Project Template - Node.js + Express + EJS + PostgreSQL",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "node db/migrate.js",
    "seed": "node db/seed.js",
    "reset": "node db/reset.js",
    "lint": "eslint src/**/*.js db/**/*.js",
    "lint:fix": "eslint src/**/*.js db/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"db/**/*.js\" \"src/**/*.css\""
  },
  "keywords": ["express", "ejs", "postgres", "template", "teaching"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "csurf": "^1.11.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  }
}
